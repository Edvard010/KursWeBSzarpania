@model HelloWorld.Models.EditUserViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form asp-controller="User" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AboutMe"></label>
        <input asp-for="AboutMe" class="form-control" />
        <span asp-validation-for="AboutMe" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary btn-block" >Zaktualizuj</button>
</form>





